商品一覧　<%= link_to "新規登録", new_admin_item_path  %>

<table class="table">
<thead class="table-light">
  <th>商品ID</th>
  <th>商品名</th>
  <th>税抜き価格</th>
  <th>ジャンル</th>
  <th>ステータス</th>
</thead>
<tbody>
<% @items.each  do |items| %>

<tr>
<td><%= items.id %></td>
<td><%= link_to admin_item_path(items.id) do %>
    <%= items.name %>
    <% end %>
</td>
<td><%= items.price %>円</td>
<td><%= items.genre.name %></td>

<td>
<% if items.is_active==true %>
販売中
<% else %>
販売停止中
<% end %>
</td>
</tr>

<% end %>
</tbody>
</table>

<%= paginate @items %>