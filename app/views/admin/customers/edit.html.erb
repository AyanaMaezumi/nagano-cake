<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集<br>

  <%= form_with model: @customer,url: admin_customer_path do |f| %>

  会員ID<%= @customer.id %><br>

  <div class="field">
    氏名
    <%= f.label :last_name, "（姓）"%>
    <%= f.text_field :last_name %>

    <%= f.label :first_name, "（名）"%>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    フリガナ
    <%= f.label :last_name_kana, "（セイ）"%>
    <%= f.text_field :last_name_kana %>

    <%= f.label :first_name_kana, "（メイ）"%>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）"%>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所"%>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号（ハイフンなし）"%>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :is_deleted, "会員ステータス"%>
    <%= f.radio_button :is_deleted, false %>有効 <%= f.radio_button :is_deleted, true %>退会
  </div>


  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
