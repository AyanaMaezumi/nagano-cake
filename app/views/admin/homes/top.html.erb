注文履歴一覧

<table class="table">
<thead class="table-light">
  <th>購入日時</th>
  <th>購入者</th>
  <th>注文個数</th>
  <th>注文ステータス</th>
</thead>
<tbody>
<% @orders.each  do |orders| %>

<tr>
<td><%= link_to admin_order_path(orders.id) do %>
    <%= orders.created_at %>
    <% end %>
</td>
<td><%= orders.customer.last_name %><%= orders.customer.first_name %></td>
<td><%= orders.order_details.sum(:quantity) %></td>
<td><%= orders.order_status_i18n %></td>
</td>
</tr>

<% end %>
</tbody>
</table>

<%= paginate @orders %>